#!/usr/bin/env bash
# Install and configure Nginx web server to display a custom page with "Hello World!"

# Update and install Nginx
apt-get update -y
apt-get install -y nginx

# Create a custom HTML page containing "Hello World!"
echo "Hello World!" > /var/www/html/index.html

# Modify Nginx default configuration
sed -i 's/root .*/root \/var\/www\/html;/' /etc/nginx/sites-available/default

# Restart Nginx without using systemctl
service nginx restart