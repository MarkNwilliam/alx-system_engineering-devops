#!/usr/bin/env bash
# Installs and configures nginx web server on a new Ubuntu machine

# Stop and remove existing Nginx installation, if any
sudo service nginx stop
sudo apt-get remove --purge -y nginx

# Remove any existing Nginx configuration files and folders
sudo rm -rf /etc/nginx/

# Stop and remove existing Apache installation, if any
sudo service apache2 stop
sudo apt-get remove --purge -y apache2

# Install Nginx
sudo apt-get update
sudo apt-get install -y nginx

# Configure Nginx to listen on port 80 and return "Hello World!"
sudo bash -c 'cat > /etc/nginx/sites-available/default << EOL
server {
    listen 80 default_server;
    listen [::]:80 default_server;

    root /var/www/html;
    index index.html;

    server_name _;

    location / {
        return 200 "Hello World!";
    }
}
EOL'

# Reload Nginx configuration
sudo service nginx reload
