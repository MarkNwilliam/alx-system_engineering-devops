#!/usr/bin/env bash
# Install and configure Nginx web server to display a custom page with "Hello World!"

# Update and install Nginx
apt-get update -y
apt-get install -y nginx

# Start Nginx service
service nginx start

# Remove the default Nginx page and create a new custom page containing "Hello World!"
echo "Hello World!" > /var/www/html/index.nginx-debian.html

# Restart Nginx without using systemctl
service nginx restart